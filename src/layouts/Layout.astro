---
import "../styles/global.css";

// Allow pages to pass a title if they want
export interface Props {
  title?: string;
}
const { title = "Anime Stream" } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col min-h-screen bg-gray-900 text-white">
    <!-- navbar -->
    <header class="bg-gray-900 text-white p-4">
      <div class="max-w-6xl mx-auto flex items-center justify-between">
        <a href="/" class="text-xl font-bold no-underline">Anime Stream</a>
        <nav class="space-x-4">
          <a href="/" class="hover:text-blue-400">Home</a>
          <!-- Add more nav links here if needed -->
        </nav>
      </div>
    </header>

    <!-- main content slot -->
    <main class="flex-1 w-full">
      <slot />
    </main>

    <!-- footer -->
    <footer class="bg-gray-800 text-gray-400 text-center py-6">
      <div class="max-w-6xl mx-auto">
        &copy; {new Date().getFullYear()} AnimeLovers Portal
      </div>
    </footer>
  </body>
</html>
