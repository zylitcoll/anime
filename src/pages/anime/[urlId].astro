---
// 1. Ambil Parameter dari URL
const { urlId } = Astro.params;

// 2. Fetch Data dari API berdasarkan urlId
const response = await fetch(
  `https://api.sansekai.my.id/api/anime/detail?urlId=${urlId}`,
);
const json = await response.json();
const anime = json.data[0]; // Kita ambil objek pertama dari array data

// Proteksi jika data tidak ditemukan
if (!anime) {
  return Astro.redirect("/404");
}
---

<html lang="id">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{anime.judul} - Detail Anime</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body
    class="bg-[#0f172a] text-slate-200 font-sans selection:bg-blue-500 selection:text-white"
  >
    <div class="relative w-full h-[300px] overflow-hidden">
      <img
        src={anime.cover}
        class="w-full h-full object-cover blur-2xl opacity-30"
        alt=""
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-[#0f172a] to-transparent"
      >
      </div>
    </div>

    <main class="max-w-6xl mx-auto px-4 -mt-40 relative z-10">
      <div class="flex flex-col md:flex-row gap-8">
        <div class="w-full md:w-1/3 lg:w-1/4">
          <div class="sticky top-8">
            <img
              src={anime.cover}
              alt={anime.judul}
              class="w-full rounded-xl shadow-2xl border-4 border-slate-800"
            />

            <div
              class="mt-6 space-y-3 bg-slate-800/50 p-4 rounded-xl border border-slate-700"
            >
              <div class="flex justify-between text-sm">
                <span class="text-slate-400">Rating</span>
                <span class="text-yellow-400 font-bold">‚≠ê {anime.rating}</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-slate-400">Status</span>
                <span class="text-green-400">{anime.status}</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-slate-400">Tipe</span>
                <span>{anime.type}</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-slate-400">Studio</span>
                <span>{anime.author}</span>
              </div>
            </div>
          </div>
        </div>

        <div class="flex-1">
          <h1 class="text-4xl font-bold text-white mb-4 leading-tight">
            {anime.judul}
          </h1>

          <div class="flex flex-wrap gap-2 mb-6">
            {
              anime.genre.map((g) => (
                <span class="px-3 py-1 bg-blue-600/20 text-blue-400 border border-blue-500/30 rounded-full text-xs font-medium">
                  {g}
                </span>
              ))
            }
          </div>

          <section class="mb-10">
            <h3 class="text-xl font-semibold mb-3 text-blue-400">Sinopsis</h3>
            <p
              class="text-slate-400 leading-relaxed text-justify whitespace-pre-line"
            >
              {anime.sinopsis}
            </p>
          </section>

          <section>
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-semibold text-white">Daftar Episode</h3>
              <span class="text-xs text-slate-500"
                >{anime.chapter.length} Episode tersedia</span
              >
            </div>

            <div
              class="grid grid-cols-1 sm:grid-cols-2 gap-3 max-h-[500px] overflow-y-auto pr-2 custom-scrollbar"
            >
              {
                anime.chapter.map((ep) => (
                  <a
                    href={`/watch/${ep.url}`}
                    class="flex items-center justify-between p-3 bg-slate-800/40 hover:bg-slate-700/60 border border-slate-700 rounded-lg transition-all group"
                  >
                    <span class="text-sm font-medium group-hover:text-blue-400 transition-colors">
                      Episode {ep.ch}
                    </span>
                    <span class="text-[10px] text-slate-500 italic">
                      {ep.date}
                    </span>
                  </a>
                ))
              }
            </div>
          </section>
        </div>
      </div>
    </main>

    <footer class="py-12 text-center text-slate-600 text-sm">
      &copy; 2026 - AnimeLovers Portal
    </footer>

    <style>
      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: #1e293b;
        border-radius: 10px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background: #334155;
        border-radius: 10px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: #475569;
      }
    </style>
  </body>
</html>
